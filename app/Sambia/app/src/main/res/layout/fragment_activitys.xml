

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >




    <ListView
        android:id="@+id/activity_frag_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/displayActivityView"
        />


    <org.hdm.app.sambia.views.DisplayActivityView
        android:id="@+id/displayActivityView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/frag_menu"
        android:background="@android:color/holo_green_dark" />


    <org.hdm.app.sambia.views.MenuView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/frag_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/myrect"/>


    <ImageButton
        android:id="@+id/btn_record"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@android:color/holo_red_light"
        android:src="@android:drawable/ic_media_pause"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
