<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:gravity="bottom"
    android:background="@android:color/holo_green_dark"
    >


    <android.support.v7.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="2dp"
        android:id="@+id/activity_view_cd"
        app:cardCornerRadius="25dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="0"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:id="@+id/activity_view_iv_"
            android:src="@drawable/onfarmwork_bagging">
        </ImageView>
    </android.support.v7.widget.CardView>



    <TextView
        android:id="@+id/activity_view_tv_name"
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:text="Watering"
        android:gravity="left|bottom"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/activity_view_tv_time"
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="32sp"
        android:textColor="@android:color/white"
        android:text="00:23:23"
        android:gravity="right|bottom"
        />


    <!--<ImageButton-->
        <!--android:id="@+id/activity_view_btn_play"-->
        <!--android:layout_weight="12"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@android:drawable/ic_media_play"-->
        <!--android:background="@android:color/transparent"/>-->

</LinearLayout>
