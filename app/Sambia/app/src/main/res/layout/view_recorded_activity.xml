                <!--android:layout_height="match_parent"-->
                <!--android:layout_width="match_parent"-->
                <!--android:padding="10dp"-->
                <!--android:id="@+id/activity_view_iv_"-->
                <!--android:src="@drawable/onfarmwork_bagging">-->
            <!--</ImageView>-->
        <!--</android.support.v7.widget.CardView>-->

        <ImageView
            android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:id="@+id/activity1_img"
        android:src="@drawable/onfarmwork_bagging">
        </ImageView>


        <LinearLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:alpha="0.3">

            <TextView
                android:id="@+id/activity1_time"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:text="00:23:23"
                />

            <ImageButton
            android:id="@+id/activity1_play"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_play"
            android:background="@android:color/transparent" />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/activity2_background"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:padding="10dp"
        android:layout_margin="2dp"
        android:orientation="vertical">


        <ImageView
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:id="@+id/activity2_img"
            android:src="@drawable/onfarmwork_bagging">
        </ImageView>


        <LinearLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:alpha="0.2">

            <TextView
                android:id="@+id/activity2_time"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:text="00:23:23"
                />

            <ImageButton
                android:id="@+id/activity2_play"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_pause"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
